                      %small.fw-600.c-grey-700 Visitors From Australia
                      %span.pull-right.c-grey-600.fsz-sm 40%
                      .progress.mT-10
                        .progress-bar.bgc-light-blue-500{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "50", :role => "progressbar", :style => "width:40%;"}
