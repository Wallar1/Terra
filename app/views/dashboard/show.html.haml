                      %small.fw-600.c-grey-700 Visitors From India
                      %span.pull-right.c-grey-600.fsz-sm 90%
                      .progress.mT-10
                        .progress-bar.bgc-blue-grey-500{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "50", :role => "progressbar", :style => "width:90%;"}
