                    .layer.w-100.mT-15
                      %h5.mB-5 1M
                      %small.fw-600.c-grey-700 Visitors From Europe
                      %span.pull-right.c-grey-600.fsz-sm 80%
                      .progress.mT-10
                        .progress-bar.bgc-green-500{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "50", :role => "progressbar", :style => "width:80%;"}
