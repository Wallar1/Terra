%main.main-content.bgc-grey-100
  #mainContent
    .row.gap-20.masonry.pos-r
    .masonry-item.col-md-12
      .bgc-white.p-20.bd
        %h6.c-grey-900 Message
        .mT-30
          = form_for message do |f|
            = f.hidden_field :site_id, value: Site.last.id
            = f.hidden_field :user_id, value: User.last.id
            .form-group
              %label Content
              = f.text_area :content, class: 'form-control', rows: '5'
            .d-flex.justify-content-around
              = f.submit 'Send', class: 'btn btn-primary'
              - if !message.new_record?
                = link_to "Delete",
                    message,
                    method: :delete,
                    data: {confirm: 'Are you sure you want to delete this message?'},
                    class: 'text-white btn btn-danger'